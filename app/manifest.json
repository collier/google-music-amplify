{
  "name": "Google Music Amplify",
  "version": "0.0.3",
  "manifest_version": 2,
  "description": "A chrome extension that adds features to Google Music for fetching metadata",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  },
  "page_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Google Music Amplify",
    "default_popup": "popup.html"
  },
  "permissions": [
    "declarativeContent"
  ],
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "http://play.google.com/music/*",
        "https://play.google.com/music/*"
      ],
      "js": [
        "bundle.js",
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/angular/angular.js",
        "bower_components/angular-material/angular-material.js",
        "bower_components/angular-animate/angular-animate.js",
        "bower_components/angular-aria/angular-aria.js",
        "bower_components/angular-spotify/src/angular-spotify.js",
        "scripts/app.js",
        "modules/metadata-btn/metadata-btn.js",
        "modules/metadata-dialog/metadata-dialog.js",
        "scripts/init.js"
      ],
      "css": [
        "bower_components/angular-material/angular-material.css"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "images/*.png",
    "modules/*/*.css",
    "modules/*/*.html"
  ]
}
